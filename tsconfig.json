{
   "compilerOptions": {
     "target": "es2018",
     "lib": ["es5", "es6", "ES2018"],
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
     "module": "commonjs",
     "moduleResolution": "node",
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "strict": true,
     "strictPropertyInitialization": false,
     "skipLibCheck": true,
     "allowJs": true,
     "outDir": "./dist",
     "rootDir": "."
   },
   "include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"files": true
	}
 }
 
 